CREATE OR REPLACE 
PROCEDURE UPDATE_PAIS(pidPais IN NUMBER, pNombre IN VARCHAR2)
AS
BEGIN
    UPDATE PAIS
    SET NOMBRE = pNombre
    WHERE ID_PAIS = pidPais;
